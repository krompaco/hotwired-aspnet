<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    @if (this.Context?.Items["csp-nonce"] != null)
    {
        <meta name="csp-nonce" content="@this.Context?.Items["csp-nonce"]" />
    }

    <link rel="shortcut icon" href="/favicon.ico" type="image/ico" />
    <link href="/dist/styles.css" rel="stylesheet" asp-append-version="true" data-turbo-track="reload" />
    <script src="/dist/main.js" async asp-append-version="true" data-turbo-track="reload"></script>
</head>
<body class="h-full">
@RenderBody()
</body>
</html>
