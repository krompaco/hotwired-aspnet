@inherits LayoutComponentBase
@implements IRazorComponentApplication<MainLayout>
<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/dist/inter-var-latin.woff2" rel="preload" as="font" type="font/woff2" crossorigin="anonymous">

    @*@if (this.Context.Items["csp-nonce"] != null)
    {
        <meta name="csp-nonce" content="@this.Context.Items["csp-nonce"]" />
    }

    @if (this.Context.Items["csrf-param"] != null)
    {
        <meta name="csrf-param" content="@this.Context.Items["csrf-param"]">
    }*@

    <link rel="shortcut icon" href="/favicon.ico" type="image/ico">
    <link href="/dist/styles.css" rel="stylesheet" data-turbo-track="reload">
    <script src="/dist/main.js" async data-turbo-track="reload" suppress-error="BL9992"></script>

    <meta name="description" content="Sample page of using Blazor United SSR, SignalR and Hotwired.dev stuff.">

    <HeadOutlet></HeadOutlet>
</head>
<body class="h-full">
    <PageTitle>Blazor United version</PageTitle>
    @Body
    <div id="js-alert-target" aria-live="polite"></div>
    <signalr-turbo-stream hub="AppHub" method="GlobalMessageReceived"></signalr-turbo-stream>
</body>
</html>
